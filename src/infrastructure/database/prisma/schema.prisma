generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_DB_URL")
  directUrl = env("SUPABASE_DB_DIRECT_URL")
}

model Product {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String
  description String
  imageUrl    String
  category    String
  price       Float
  stock       Int
  createdAt   DateTime
  updatedAt   DateTime
}
